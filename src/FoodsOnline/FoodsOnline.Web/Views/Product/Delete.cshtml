@model FoodsOnline.Web.ViewModels.ProductViewModel

<h3>Delete Product</h3>
<h4>Tem certeza que deseja deletar este produto?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
    </dl>
    <div class="row">
        <div class="form-group col-md-4">
            <img src="~/images/@Model.ImagePath" />
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <div class="form-group" style="padding-top: 10px">
            <input type="submit" value="Salvar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-info">Voltar</a>
        </div>
    </form>
</div>